<h1>Index</h1>

<div>
  <% @tasks.each do |task| %>
    <p>
      <% if task.completed %>
        <i class="fa-regular fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, show_path(task) %>
      <%= link_to('🗑️', destroy_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}) %>
    </p>
  <% end %>
</div>
